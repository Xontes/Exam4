@using Exam4.ViewModels
@model RegisterVm
<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form  method="post">
                                  

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <label asp-for="Name" class="form-label" for="form3Example1c">Name</label>
                                            <input asp-for="Name" type="text" id="form3Example1c" class="form-control" />
                                            <span asp-validation-for="Name" style="color:red"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <label asp-for="Surname" class="form-label" for="form3Example3c">Surname</label>
                                            <input asp-for="Surname" type="text" id="form3Example3c" class="form-control" />
                                            <span asp-validation-for="Surname" style="color:red"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <label asp-for="Username" class="form-label" for="form3Example4c">Username</label>
                                            <input asp-for="Username" type="text" id="form3Example4c" class="form-control" />
                                            <span asp-validation-for="Username" style="color:red"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <label asp-for="Email" class="form-label" for="form3Example4cd">Email Address</label>
                                            <input asp-for="Email" type="email" id="form3Example4cd" class="form-control" />
                                            <span asp-validation-for="Email" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <label asp-for="Password" class="form-label" for="form3Example4cd">Password</label>
                                            <input asp-for="Password" type="password" id="form3Example4cd" class="form-control" />
                                            <span asp-validation-for="Password" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <label asp-for="ConfirmPassword" class="form-label" for="form3Example4cd">Repeat Password</label>
                                            <input asp-for="ConfirmPassword" type="password" id="form3Example4cd" class="form-control" />
                                            <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div asp-validation-summary="All">
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button class="btn btn-primary btn-lg">Register</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>